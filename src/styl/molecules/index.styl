.molecule-menu-header
  list-style: none
  display: inline-block
  float: right
  margin-right: 0.1em

.molecule-menu
  max-width: 40%
  display: inline-block
  float: right
    @media (min-width: $desktop-size)
      max-width: 70%
      margin-top: 1.8rem
  .molecule-menu-header
    max-height: 0
    overflow: hidden
    @media (min-width: $desktop-size)
      overflow: visible
  .atom-item-menu
    visibility: hidden
    display: block
    padding: 0.5em 0.6em
    border: none

.molecule-curso-chamada
  padding-top: 1rem
  background-color: $azul-claro
  @media (min-width: $desktop-size)
    background: url('../img/section-video-bg.jpg') repeat-x top left

.molecule-video-chamada
  background-color: $branco
  @media (min-width: $desktop-size)
    background: url('../img/video-mac-bg.png') no-repeat top center
    height: 500px
    .atom-video-chamada-curso
      min-height: 340px
      width: 550px
      margin: 0 auto
      position: relative
      top: 40px

.molecule-video-text
  background-color: $branco
  padding-top: 2rem
  @media (min-width: $desktop-size)
    padding-top: 0

.molecule-box-curso-wrapper
  background-color: $branco
  margin-bottom: 1rem
  padding-top: 0.2rem
  clear: both
  width: 100%
  max-width: 100%
  height: 12rem
  .atom-curso-thumb
    margin-top: 1rem
    display: inline-block
    width: 30%
    float: left
  .atom-title-curso,
  .atom-curso-resume
    float: left
    width: 60%
    margin-left: 1rem







