          li.atom-item-menu(role='menuitem',
                            tabindex='-1')
            a.atom-link-menu(href='#') cursos
          li.atom-item-menu(role='menuitem',
                            tabindex='-1')
            a.atom-link-menu(href='#') material de apoio
          li.atom-item-menu(role='menuitem',
                            tabindex='-1')
            a.atom-link-menu(href='#') instrutores
          li.atom-item-menu(role='menuitem',
                            tabindex='-1')
